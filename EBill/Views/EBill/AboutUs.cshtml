
@{
    ViewBag.Title = "AboutUs";
}
<div class="container shadow mt-4 rounded pt-5 pb-3 mt-5" style="background-color: #FAF5EF; width: 75%; ">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="fw-bold mb-4 text-light" style="background-color: #151B54">About Us</h1>
            <a href="@Url.Action("Index", "Home")" class="company-logo">
                <img src="~/Content/Images/EBILL LOGO PNG.png" alt="ytp" style="max-height: 100px;">
