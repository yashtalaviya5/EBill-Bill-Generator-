@model IEnumerable<EBill.Models.BillDetail>
@{
    ViewBag.Title = "E-Bill";
}

<div class="container shadow rounded mt-4 " style="background-color: #FAF5EF;">
    <div class="row">
        <div class="col-12">
            <h1 class="fw-bold mb-4 text-center text-light" style="background-color: #151B54">All Bills</h1>
            <table class="table table-responsive table-striped table-hover table-bordered text-center">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Customer Name</th>
                        <th>Mobile Number</th>
                        <th>Address</th>
                        <th>Total Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CustomerName</td>
                            <td>@item.MobileNumber</td>
                            <td>@item.Address</td>
                            <td>@item.TotalAmount</td>
                            <td>
                                @Html.ActionLink("View", "ViewBill", "EBill", new { Id = @item.Id }, new { @class = "btn btn-sm btn-dark border" })
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
